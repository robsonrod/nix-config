#!/usr/bin/env bash

source ${BASHDIR}/functions/set_keyboard

declare -A LAYOUTS=(
	["BR - Brazilian ABNT2"]="br"
	["US - ANSI"]="us"
	["ALT - ANSI ALTERNATIVE"]="us -variant alt-intl"
)

keyboard_list() {
	for i in "${!LAYOUTS[@]}"; do
		echo "$i"
	done
}

main() {
	selected=$( (keyboard_list) | rofi -dmenu -location 0 -p "ï„œ  Layout: ")

	if [ -n "$selected" ]; then
		layout="${LAYOUTS[$selected]}$query"
		set_keyboard "$layout"
	fi
}

main

exit 0
